<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>robozonky</artifactId>
    <groupId>com.github.robozonky</groupId>
    <version>5.8.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>robozonky-distribution</artifactId>
  <packaging>pom</packaging>

  <name>RoboZonky Distribution: User-facing deliverables</name>

  <properties>
    <com.github.robozonky.distribution.main>override.this.in.child.poms</com.github.robozonky.distribution.main>
  </properties>

  <modules> <!-- other components are only enabled conditionally -->
    <module>robozonky-distribution-full</module>
  </modules>

  <profiles>
    <profile> <!-- Utilities won't be built in Docker, where it is not needed and takes a lot of time. -->
      <id>build-utility-distribution</id>
      <activation>
        <property>
          <name>!docker</name>
        </property>
      </activation>
      <modules>
        <module>robozonky-distribution-aggregate</module>
        <module>robozonky-distribution-installer</module>
        <module>robozonky-distribution-cli</module>
      </modules>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin> <!-- Shade plugin configuration shared by all distribution modules. -->
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <configuration>
            <filters>
              <filter> <!-- Disable modularity for all dependencies, in order to not confuse JLink later. -->
                <artifact>*:*</artifact>
                <excludes>
                  <exclude>**/*module-info*</exclude>
                </excludes>
              </filter>
            </filters>
            <transformers>
              <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
              <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                <manifestEntries>
                  <Main-Class>${com.github.robozonky.distribution.main}</Main-Class>
                </manifestEntries>
              </transformer>
            </transformers>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
