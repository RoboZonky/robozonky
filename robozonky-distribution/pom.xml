<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>robozonky</artifactId>
    <groupId>com.github.robozonky</groupId>
    <version>4.6.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>robozonky-distribution</artifactId>
  <packaging>pom</packaging>

  <properties>
    <!-- Installer variables -->
    <info.appname>RoboZonky</info.appname>
    <info.appversion>${project.version}</info.appversion>
    <info.appsubpath>robozonky</info.appsubpath>
    <izpack.dir.app>${basedir}/src/main/izpack</izpack.dir.app>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.github.robozonky.installer</groupId>
      <artifactId>robozonky-installer-panels</artifactId>
    </dependency>
    <dependency>
      <groupId>com.github.robozonky</groupId>
      <artifactId>robozonky-app</artifactId>
      <classifier>dist</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>

  <build> <!-- Ordering of plugins here is important; Maven will execute plugins within a phase in the given order. -->
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <attach>false</attach>
          <descriptors>
            <!--
              By default, jar-with-dependencies will overwrite META-INF/services when there's more than 1 for each
              kind of service. This descriptor will merge them instead.
            -->
            <descriptor>src/main/assembly/jar-with-dependencies-merge-services.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin> <!-- Disable testing as there are no tests -->
        <groupId>org.pitest</groupId>
        <artifactId>pitest-maven</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.izpack</groupId>
        <artifactId>izpack-maven-plugin</artifactId>
        <version>${version.org.codehaus.izpack}</version>
        <configuration>
          <baseDir>${project.build.directory}</baseDir>
          <installFile>${izpack.dir.app}/install.xml</installFile>
          <mkdirs>true</mkdirs>
          <classifier>installer</classifier>
          <autoIncludeUrl>false</autoIncludeUrl>
          <autoIncludeDevelopers>true</autoIncludeDevelopers>
          <comprFormat>xz</comprFormat>
        </configuration>
        <executions>
          <execution>
            <id>package-izpack</id>
            <phase>package</phase>
            <goals>
              <goal>izpack</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <stripVersion>true</stripVersion>
          <overWriteReleases>true</overWriteReleases>
          <overWriteSnapshots>true</overWriteSnapshots>
          <overWriteIfNewer>true</overWriteIfNewer>
          <excludeTransitive>true</excludeTransitive>
          <excludeScope>system</excludeScope>
        </configuration>
        <executions>
          <execution>
            <id>copy</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
