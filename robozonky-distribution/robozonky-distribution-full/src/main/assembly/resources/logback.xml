<configuration packagingData="true">
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook">
        <delay>1000</delay> <!-- Wait a while before robot ends to flush all logging events -->
    </shutdownHook>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
          <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>robozonky.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>robozonky.%d{yyyyMMdd}.log</fileNamePattern>
          <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="javax.mail" level="ERROR" /> <!-- unavoidable modularity-related javamail warning otherwise -->
    <logger name="com.github.robozonky" level="DEBUG" /> <!-- for a much more verbose logging, change DEBUG to TRACE -->
    <root level="INFO"> <!-- default level for loggers is INFO; the lines above change that for specific loggers -->
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
